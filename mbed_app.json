{
    "macros": [
        "ARM_UC_USE_PAL_BLOCKDEVICE=1",
        "MBED_CLOUD_CLIENT_UPDATE_STORAGE=ARM_UCP_FLASHIAP_BLOCKDEVICE",
        "MBED_HEAP_STATS_ENABLED=1",
        "MBED_STACK_STATS_ENABLED=1",
        "WIFI_ESP8266=1"
    ],
    "target_overrides": {
        "*": {
            "target.features_add"               : ["BOOTLOADER", "STORAGE"],
            "platform.stdio-baud-rate"          : 115200,
            "platform.stdio-convert-newlines"   : true,
            "platform.stdio-buffered-serial"    : true,
            "mbed-client.event-loop-size"       : 1024,
            "nanostack-hal.event_loop_thread_stack_size": 8192,
            "update-client.storage-address"     : "(1024*1024*64)",
            "update-client.storage-size"        : "(1024*1024*2)",
            "update-client.storage-locations"   : 1,
            "mbed-trace.enable": true,
            "nsapi.default-wifi-security"       : "WPA_WPA2",
            "nsapi.default-wifi-ssid"           : "\"CiklumBiowaveLabs\"",
            "nsapi.default-wifi-password"       : "\"Biowave_is_the_best\"",
            "platform.memory-tracing-enabled": true
        },
        "STM_EMAC": {
            "target.components_add"                 : ["SD"],
            "lwip.pbuf-pool-size" : 16,
            "lwip.mem-size"       : 12500
        },
        "K64F": {
            "target.components_add"                 : ["SD"],
            "target.network-default-interface-type" : "WIFI",
            "update-client.bootloader-details"      : "0x00007188",
            "update-client.application-details"     : "(40*1024)",
            "esp8266.rx": "D0",
            "esp8266.tx": "D1",
            "esp8266.debug": false
        },
        "NRF52840_DK": {
            "target.network-default-interface-type" : "WIFI",
            "target.bootloader_img"                 : "bootloader/mbed-bootloader-NRF52840_DK.hex",
            "target.app_offset"                     : "0x33000",
            "target.header_offset"                  : "0x32C00",
            "update-client.bootloader-details"      : "0x00007188",
            "update-client.application-details"     : "((512+508)*1024)",
            "update-client.storage-address"         : "((512+236)*1024)",
            "update-client.storage-size"            : "((512+228)*1024)",
            "update-client.storage-locations"       : 1,
            "update-client.storage-page"            : 4,
            "client_app.sotp-section-1-address"     : "(0xF0000)",
            "client_app.sotp-section-1-size"        : "(4*1024)",
            "client_app.sotp-section-2-address"     : "(0xF0000 + 8 * 1024)",
            "client_app.sotp-section-2-size"        : "(4*1024)",
            "client_app.primary_partition_size"     : "(2048*1024)",
            "esp8266.rx": "P1_9",
            "esp8266.tx": "P0_6",
            "esp8266.provide-default": true,
            "esp8266.debug": true,
            "spif-driver.SPI_MOSI": "P0_25",
            "spif-driver.SPI_MISO": "P0_28",
            "spif-driver.SPI_CLK": "P0_29",
            "spif-driver.SPI_CS": "P0_24", 
            "spif-driver.SPI_FREQ": "10000000",
            "target.macros_add": [
               "LED_RED=P1_13",
               "PAL_USE_HW_ROT=0",
               "PAL_USE_HW_RTC=0",
               "PAL_USE_INTERNAL_FLASH=1",
               "SYS_CONF_SOTP=SYS_CONF_SOTP_ENABLED",
               "WINC1500_CS=P0_12"          
            ],
            "target.macros_remove"                  : ["MBEDTLS_CONFIG_HW_SUPPORT"],
            "target.features_remove"                : ["CRYPTOCELL310"],
            "target.components_remove"              : ["SD"],
            "target.components_add"                 : ["SPIF"]
        },
        "K66F": {
            "target.components_add"                 : ["SD"],
            "target.network-default-interface-type" : "ETHERNET",
            "update-client.bootloader-details"      : "0x00007188",
            "update-client.application-details"     : "(40*1024)"
        },
        "NUCLEO_F429ZI": {
            "target.components_add"                 : ["SD"],
            "target.network-default-interface-type" : "ETHERNET",
            "update-client.bootloader-details"      : "0x080078CC",
            "update-client.application-details"     : "(0x08000000+64*1024)"
        },
        "UBLOX_EVK_ODIN_W2": {
            "target.components_add"                 : ["SD"],
            "target.network-default-interface-type" : "WIFI",
            "update-client.bootloader-details"      : "0x08007300",
            "update-client.application-details"     : "(0x08000000+64*1024)",
            "target.lse_available"                  : 0,
            "target.macros_remove"                  : ["MBEDTLS_CONFIG_HW_SUPPORT"]
        },
        "NUCLEO_F411RE": {
            "target.components_add"                 : ["SD"],
            "client_app.mbedtls-user-config-file"      : "\"mbedTLSConfig_mbedOS_SW_TRNG.h\"",
            "client_app.pal-user-defined-configuration": "\"sotp_non_trng_config_MbedOS.h\"",
            "target.network-default-interface-type" : "WIFI",
            "drivers.uart-serial-rxbuf-size"        : 1024,
            "drivers.uart-serial-txbuf-size"        : 1024,
            "update-client.bootloader-details"      : "(0x08000000+30*1024)",
            "update-client.application-details"     : "(0x08000000+64*1024)",
            "idw0xx1.provide-default": true,
            "idw0xx1.tx": "PA_9",
            "idw0xx1.rx": "PA_10",
            "target.macros_remove"                  : ["MBEDTLS_CONFIG_HW_SUPPORT"]
        }
    },
    "config": {
        "developer-mode": {
            "help"      : "Enable Developer mode to skip Factory enrollment",
            "options"   : [null, 1],
            "value"     : 1
        },
        "button-pinname": {
            "help"      : "PinName for button.",
            "value"     : "BUTTON1"
        },
        "led-pinname"   : {
            "help"      : "PinName for led, which is attached to led blink resource.",
            "value"     : "LED_RED"
        }
    }
}
